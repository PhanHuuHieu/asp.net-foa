@model PagedList.IPagedList<Model.EF.User>
@using PagedList.Mvc;
@{
    ViewBag.Title = "QLND";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>
@section header{
  Danh sach nguoi dung
}
@section jsFooter{
    <script src="~/Assets/js/controller/userController.js"></script>
}
<div class="row">
    <div class="col-lg-12">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">DataTables Example</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                @using (Html.BeginForm("Index", "User", FormMethod.Post))
                {
                    <div class="row">
                        <div class="col-lg-12">
                            <input type="text" name="searchString" />
                            <button type="submit" value="Search">
                            </button>
                        </div>
                    </div>
                }

                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>email</th>
                            <th>phone</th>
                            <th>date</th>
                            <th>sex</th>
                            <th>Salary</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr id="row_@item.id">
                                <td>
                                    <a href="/Admin/User/Edit/@item.id">Sua</a>
                                    @Ajax.ActionLink("Xoa", "Delete", new { @id = item.id }, new AjaxOptions
                               {
                                   Confirm = " BAn co muon xoa",
                                   OnComplete = "$('#row_" + @item.id + "').remove()",
                                   HttpMethod = "Delete"
                               })
                                </td>
                                <td>@item.username</td>
                                <td>@item.email</td>
                                <td>@item.phone</td>
                                @*<td>@item.date</td>*@
                                <td><a href="" class="btn-active" data-id="@item.id">@(item.date == "0" ?"Male":item.date==""?"":"Female")</a></td>
                                <td>@item.id</td>
                            </tr>
                        }

                    </tbody>
                </table>
                @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
            </div>
        </div>
    </div>
</div>